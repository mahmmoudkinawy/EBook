@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Cover Type List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="CoverType" asp-action="Create">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Cover Type
            </a>
        </div>
    </div>


    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>Cover Type</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var coverType in Model)
            {
                <tr>
                    <td width="50%">@coverType.Name</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a class="btn btn-primary mx-2" style="width: 150px" asp-controller="CoverType" asp-action="Edit" asp-route-id="@coverType.Id">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a class="btn btn-danger mx-2" style="width: 150px" asp-controller="CoverType" asp-action="Delete" asp-route-id="@coverType.Id">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>